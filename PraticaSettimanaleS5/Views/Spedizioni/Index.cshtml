@model IEnumerable<PraticaSettimanaleS5.Models.Spedizione>

<h1>Spedizioni</h1>

<table class="table">
    <thead>
        <tr>
            <th>Numero Tracking</th>
            <th>Cliente</th>
            <th>Data Spedizione</th>
            <th>Destinatario</th>
            <th>Stato Spedizione Aggiornato</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var spedizione in Model)
        {
            <tr>
                <td>@spedizione.NumeroTracking</td>
                <td>@spedizione.Cliente?.Nome</td>
                <td>@spedizione.DataSpedizione.ToShortDateString()</td>
                <td>@spedizione.NomeDestinatario</td>
                <td>@spedizione.UltimoStato</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Aggiungi Spedizione</a>
